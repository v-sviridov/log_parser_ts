{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "incremental": true,
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noLib": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "paths": {
    "@/*": ["./src"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "bin", "./index.js", "./cli.js"]
}
